#include <iostream>

using namespace std;



int main() {

    int t,x1,x2,y1,y2,p;

    cin>>t;

    for(int i=1;i<=t;i++)

    {

        cin>>x1>>y1>>x2>>y2;

        if(abs(x1-x2)>=abs(y1-y2)){

            cout<<abs(x1-x2)<<endl;

        }

        else{

            cout<<abs(y1-y2)<<endl;

        }

    }

	// your code goes here

	return 0;

}

